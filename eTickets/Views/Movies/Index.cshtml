@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row justify-content-center mt-4">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 col-sm-12 mb-5">
            <div class="card shadow h-100" style="background-color: #f8f9fa; border-radius: 8px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center"
                             style="border-radius: 8px 8px 0 0;">
                            <h5 class="mb-0" style="font-size: 1rem;">@item.Name</h5>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="text-white" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            }
                        </div>
                    </div>
                    <div class="col-md-12">
                        <img src="@item.ImageURL" class="card-img-top" alt="@item.Name" style="height: 130px; width: 100%; object-fit: contain; padding: 10px;">
                    </div>
                    <div class="col-md-12">
                        <div class="card-body bg-light" style="padding: 10px;">
                            <p class="card-text" style="font-size: 0.9rem;">@item.Description</p>
                            <p class="card-text" style="font-size: 0.9rem;"><strong>Cinema:</strong> @item.Cinema.Name</p>
                            <p class="card-text" style="font-size: 0.9rem;"><strong>Category:</strong> @item.MovieCategory</p>
                            <p class="card-text" style="font-size: 0.9rem;"><strong>Start Date:</strong> @item.StartDate.ToString("dd MMM yy")</p>
                            <p class="card-text" style="font-size: 0.9rem;"><strong>End Date:</strong> @item.EndDate.ToString("dd MMM yy")</p>
                            <p class="card-text" style="font-size: 0.9rem;">
                                <strong>Status:</strong>
                                @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else if (DateTime.Now > item.EndDate)
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer bg-white d-flex justify-content-between"
                             style="border-radius: 0 0 8px 8px;">
                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye-fill"></i> Show Details
                            </a>
                            <a class="btn btn-success text-white @((DateTime.Now > item.EndDate) ? "disabled" : "")"
                               asp-controller="Orders"
                               asp-action="AddItemToShoppingCart"
                               asp-route-id="@item.Id">
                                <i class="bi bi-cart-plus"></i> Add to Cart (@item.Price.ToString("c"))
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_CreateItem", "Movies")
