@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg p-4 rounded-3 border-0">
            <h3 class="text-center mb-4 text-primary">Add a New Actor</h3>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Profile Picture Preview -->
                <div class="text-center mb-4">
                    <img id="ProfilePicturePreview" class="border-info rounded-circle shadow-sm" style="width: 150px; height: 150px; object-fit: cover;" />
                </div>

                <!-- Profile Picture URL Input -->
                <div class="form-group mb-3">
                    <label asp-for="ProfilePictureURL" class="form-label fw-bold">Profile Picture URL</label>
                    <input asp-for="ProfilePictureURL" class="form-control form-control-lg rounded-pill shadow-sm" />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>

                <!-- Full Name Input -->
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control form-control-lg rounded-pill shadow-sm" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Bio Input -->
                <div class="form-group mb-4">
                    <label asp-for="Bio" class="form-label fw-bold">Bio</label>
                    <input asp-for="Bio" class="form-control form-control-lg rounded-pill shadow-sm" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <!-- Submit and Show All Buttons -->
                <div class="d-flex justify-content-between">
                    <a class="btn btn-outline-secondary rounded-pill px-4" asp-action="Index">Show All</a>
                    <input type="submit" value="Create" class="btn btn-outline-primary rounded-pill px-4" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        });

        $("#ProfilePictureURL").on("input", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        });
    </script>
}
